@using App.Models
@model ProjectViewModel
@{
    ProjectViewModel item = Model;
}

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/bootstrap-datepicker.min.js"></script>
<link rel="stylesheet" href="~/Content/bootstrap-datepicker3.min.css" />

@using (Html.BeginForm("RemoveProject", "Project", FormMethod.Post, new { @class = "", role = "", id = item.Id*2 }))
{
    @Html.HiddenFor(x => x.Id, item.Id);
    <td>
        <input type="submit" id="@(item.Id*2)" value="Remove" class="btn btn-primary" onclick="return ToSubmit(this)" />
    </td>
}

@using (Html.BeginForm("EditProject", "Project", FormMethod.Get, new { @class = "", role = ""}))
{
    @Html.HiddenFor(x => x.Id, item.Id);
    <td>
        <input type="submit"  value="Edit" class="btn btn-primary"/>
    </td>
}          

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/jquery")
}      

<script type="text/javascript">
    (function () {
    })();
    function ToSubmit(o) {
        event.preventDefault;

        if (confirm("Are you sure you want to delete project?") == true) {
            var formId = o.id;
            var form = document.getElementById(formId);
            form[0].submit();
        } else {
            return false;
        }
    }
</script>