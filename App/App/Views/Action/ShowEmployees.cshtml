@using App.Models
@model ICollection<Employee>
@{
    ViewBag.Title = "ShowEmployees";
    ICollection<Employee> EmployeeList = Model;
}

<h2>Employees</h2>

<!-- TODO ADD TO BUNDLES-->
<link rel="stylesheet" href="~/Content/bootstrap.min.css">
<script src="~/Scripts/bootstrap.min.js"></script>
<script src="~/Scripts/jquery-1.10.2.min.js"></script>

<table class="table">
    <thead>
        <tr>
            <th>Firstname</th>
            <th>Lastname</th>
            <th>Position</th>
            <th>Options</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in EmployeeList)
        {
            if (item.Deleted != true)
            { 
            <tr>
                <td>@item.Name</td>
                <td>@item.Surname</td>
                <td>@item.Position</td>
                <td>
                    @Html.ActionLink("Remove", "RemoveEmployee", "Action", new { id = item.Id }, new { @class = "btn btn-default" })
                    @Html.ActionLink("Edit", "EditEmployee", "Action", new { id = item.Id }, new { @class = "btn btn-default" })
                </td>
            </tr>
            }
        }
    </tbody>
</table>



