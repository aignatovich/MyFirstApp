@model App.Models.EmployeeModel
@using App.Models
@{
    PositionsService RoleContainer = new PositionsService();
    EmployeeModel employee = Model;
}
@Html.AntiForgeryToken()
<hr />
@Html.ValidationMessageFor(m => m, "", new { @class = "text-danger" })
<br /><br />
<div class="form-group">
    @Html.LabelFor(m => m.Name, new { @class = "col-md-2 control-label" })
    <div class="col-md-10">
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control", @placeholder = "Here goes your name" })
        @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
    </div>
</div>
<div class="form-group">
    @Html.LabelFor(m => m.Surname, new { @class = "col-md-2 control-label" })
    <div class="col-md-10">
        @Html.TextBoxFor(m => m.Surname, new { @class = "form-control", @placeholder = "Here goes your surname" })
        @Html.ValidationMessageFor(m => m.Surname, "", new { @class = "text-danger" })
    </div>
</div>
<div class="form-group">
    @Html.LabelFor(m => m.Position, new { @class = "col-md-2 control-label" })
    <div class="col-md-10">
        @Html.DropDownListFor(m => m.Position, RoleContainer.GetRoles(), "Options", new { @class = "form-control", @placeholder = "-Select role-" })
        @Html.ValidationMessageFor(m => m.Position, "", new { @class = "text-danger" })
    </div>
</div>
<div class="form-group">
    <div class="col-md-offset-2 col-md-10">
        <input type="submit" class="btn btn-default" value="Submit" />
    </div>
</div>
