@using App.Models
@model ICollection<Employee>
@{
    ViewBag.Title = "Show Employees";
    ICollection<Employee> EmployeeList = Model;
}

<h2>Employees</h2>

<!-- TODO ADD TO BUNDLES-->
<link rel="stylesheet" href="~/Content/bootstrap.min.css">
<script src="~/Scripts/bootstrap.min.js"></script>
<script src="~/Scripts/jquery-1.10.2.min.js"></script>

<table class="table">
    <thead>
        <tr>
            <th>Firstname</th>
            <th>Lastname</th>
            <th>Position</th>
            <th>Options</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in EmployeeList)
        {
            if (item.Deleted != true)
            { 
            <tr>
                <td>@item.Name</td>
                <td>@item.Surname</td>
                <td>@item.Position</td>
                <td>                 
                    @using (Html.BeginForm("RemoveEmployee", "Employee", FormMethod.Post, new { @class = "btn", role = "form" }))
                    {
                        @Html.Hidden("id", item.Id);
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" class="btn btn-default" value="Remove" />
                            </div>
                        </div>
                    }
                    @using (Html.BeginForm("EditEmployee", "Employee", FormMethod.Post, new { @class = "btn", role = "form" }))
                    {
                        @Html.Hidden("id", item.Id);
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" class="btn btn-default" value="Edit" />
                            </div>
                        </div>
                    }
                </td>
            </tr>
            }
        }
    </tbody>
</table>



