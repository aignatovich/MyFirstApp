@using App.Models
@model ICollection<EmployeeModel>
@{
    ViewBag.Title = "Show Employees";
    ICollection<EmployeeModel> EmployeeList = Model;
    PositionsService RoleContainer = new PositionsService();
}

<h2>Employees</h2>

<table class="table">
    <thead>
        <tr>
            <th>Firstname</th>
            <th>Lastname</th>
            <th>Position</th>
            <th>Options</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in EmployeeList)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Surname</td>
                <td>@item.Position</td>               
                   @Html.Partial("CommonOptions", item)
            </tr>           
        }
    </tbody>
</table>


