@using App.Models
@model ICollection<EmployeeModel>
@{
    ViewBag.Title = "Show Employees";
    ICollection<EmployeeModel> EmployeeList = Model;
    PositionsDataAccessObject RoleContainer = new PositionsDataAccessObject();
}

<h2>Employees</h2>

<!-- TODO ADD TO BUNDLES-->
<link rel="stylesheet" href="~/Content/bootstrap.min.css">
<script src="~/Scripts/bootstrap.min.js"></script>
<script src="~/Scripts/jquery-1.10.2.min.js"></script>

<table class="table">
    <thead>
        <tr>
            <th>Firstname</th>
            <th>Lastname</th>
            <th>Position</th>
            <th>Options</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in EmployeeList)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Surname</td>
                <td>@item.Position</td>
                <td>                 
                    @Html.ActionLink("Remove", "RemoveEmployee", new { id = item.Id }, new { @class = "" }) |
                    @Html.ActionLink("Edit", "EditEmployee", new { id = item.Id }, new { @class = "" })
                </td>
            </tr>           
        }
    </tbody>
</table>



