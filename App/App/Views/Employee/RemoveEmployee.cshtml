@using App.Models
@model Employee
@{
    ViewBag.Title = "RemoveEmployee";
    Employee employee = Model;
}

<h2>Remove Employee</h2>

<br />

<h4>Are you sure you want to remove this employee?</h4>
<br />

<table class="table">
    <thead>
        <tr>
            <th>Firstname</th>
            <th>Lastname</th>
            <th>Position</th>           
        </tr>
    </thead>
    <tbody>
       
            <tr>
                <td>@employee.Name</td>
                <td>@employee.Surname</td>
                <td>@employee.Position</td>
            </tr>       
    </tbody>
</table>

<br /><br /><br /><br /><br />
<div class="form-inline">
    @using (Html.BeginForm("RemoveConfirmed", "Employee", FormMethod.Post, new { @class = "", role = "" }))
    {
        @Html.HiddenFor(x => x.Id, employee.Id);
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" class="btn btn-default" value="Yes" />
            </div>
        </div>
    }
    @Html.ActionLink("No, back to list", "ShowEmployees", "Employee", "", new { @class = "btn btn-default" })
</div>











